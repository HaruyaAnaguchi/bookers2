<div class="container">
  
  <div class="error_pxplanation">
    <% if @user.errors.any? %>
      <h3><%= pluralize(@user.errors.count,"error") %> prohibit this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |f| %>
          <li><%= f %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
           <% @users.each do |f| %>
          <tr>
            <th><%= image_tag f.get_profile_image(100, 100) %></th>
            <th><%= f.name %></th>
            <th><%= link_to 'Show', user_path(f.id) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

