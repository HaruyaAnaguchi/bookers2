<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>User info</h2>
      
      <div class="error_pxplanation">
        <% if @user.errors.any? %>
          <h3><%= pluralize(@user.errors.count,"error") %> prohibit this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |f| %>
              <li><%= f %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user do |f| %>

        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, placeholder:"Name", class: "form-control" %>
        </div>

        <dic class="form-group">
          <label for="profile_image">image</label>
          <%= f.file_field :profile_image, accept: "image/*" , class: "form-control-file pb-3" %>
        </dic>

        <div class="form-group">
          <label for="introduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, placeholder:"Introduction", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>