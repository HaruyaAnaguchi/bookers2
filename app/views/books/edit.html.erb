<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>Editing Book</h2>

       <div class="error_pxplanation">
        <% if @book.errors.any? %>
          <h3><%= pluralize(@book.errors.count,"error") %> prohibit this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |f| %>
              <li><%= f %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @book do |f| %>

        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title, autofocus: true, placeholder:"Title", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="body">Opinion</label>
          <%= f.text_field :body, autofocus: true, placeholder:"Opinion", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>

      <% end %>

      <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>